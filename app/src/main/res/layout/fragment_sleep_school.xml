<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sleepSchool"
    android:background="#FF8066">

    <TextView
        android:id="@+id/textView"
        android:layout_width="477dp"
        android:layout_height="126dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/cabin_sketch"
        android:text="Welcome to sleep school"
        android:textColor="#9262B6"
        android:textSize="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginTop="300dp"
        android:text="Sleep article#1"
        android:textColorLink="#835EC1"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginTop="360dp"
        android:text="Sleep article#2"
        android:textColorLink="#835EC1"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginTop="420dp"
        android:text="Sleep article #3"
        android:textColorLink="#835EC1"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button6"
        style="@android:style/Widget.Holo.Button.Inset"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginTop="480dp"
        android:text="Sleep article#4"
        android:textColorLink="#835EC1"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
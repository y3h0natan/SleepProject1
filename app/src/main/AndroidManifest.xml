<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/restlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/restlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.SleepApp1"
        tools:targetApi="31" >
        <activity
            android:name=".BlueLightFilter"
            android:banner="@drawable/app_icon_your_company"
            android:exported="false"
            android:icon="@drawable/app_icon_your_company"
            android:label="@string/title_activity_blue_light_filter"
            android:logo="@drawable/app_icon_your_company"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ProfilePage"
            android:exported="false" />
        <activity
            android:name=".SleepNoiseLibrary"
            android:exported="false" />
        <activity
            android:name=".optionsScreena"
            android:exported="false" />
        <activity
            android:name=".SleepSchoola"
            android:exported="false" />
        <activity
            android:name=".SignInScreena"
            android:exported="false" />
        <activity
            android:name=".loginscreena"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>